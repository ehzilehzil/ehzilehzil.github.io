doctype html
html(lang="ko", data-theme="light", class="preload")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        title #{ site.title }
        link(rel="stylesheet", href="/global.css")
    body
        .layout
            .section
                header
                    .leftside
                        h1.site-title #{ site.title }
                    .rightside
                        button.toggle-theme
                            div.toggle-theme-back
                                span.material-symbols-light--sunny-outline
                                span.material-symbols-light--nights-stay-outline
            hr
            .section
                nav
                    ul
                        li
                            a(href="/") Home
                        each page in dirs["__DIRECTORY__"]
                            li
                                a(href=page.permalink) #{ page.title }
            hr
            .section
                main
                    // content goes here
            hr
            .section
                footer
                    .footer-msg
                        div Designed by EHZIL,
                        div
                            | Built with
                            span.deno
                            | Deno,
                        div
                            | Powered by
                            span.github
                            | Github.
        script(src="/global.js", type="module")
