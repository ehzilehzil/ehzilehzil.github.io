doctype html
html(lang="ko", data-theme="light")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        title #{ site.title }
        link(rel="stylesheet", href="/global.css")
    body
        .layout
            header.section
                .leftside
                    h1.site-title #{ site.title }
                .rightside
                    button.toggle-theme
                        span.material-symbols-light--sunny-outline
                        span.material-symbols-light--nights-stay-outline
            hr
            nav.section
                ul
                    each page in dirs["__DIRECTORY__"]
                        li
                            a(href=page.permalink) #{ page.title }
            hr
            main.section
                // content goes here
            hr
            footer.section
        script(src="/global.js")
