<!DOCTYPE html>
html(lang="ko", data-theme="light")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="./global.css")
    body
        .layout
            header.section
                .leftside
                    h1.site-title #{ site.title }
                .rightside
                    button.toggle-theme
                        img(src="./material-symbols-light--sunny-outline.svg")
            hr
            nav.section
                ul
                    each dir in page.dirs
                        li
                            a(href=dir.permalink) #{ dir.title }
            hr
            main.section
            hr
            footer.section
        script(src="./global.js")